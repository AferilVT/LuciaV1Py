<Window x:Class="LuciaBotLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lucia Bot Launcher" Height="450" Width="700" MinWidth="500" MinHeight="350"
        WindowStartupLocation="CenterScreen" Background="Transparent"
        WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#23272A" Offset="0"/>
            <GradientStop Color="#18191C" Offset="1"/>
        </LinearGradientBrush>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="0" Color="#222" Opacity="0.5"/>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="18"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#5865F2" Offset="0"/>
                                            <GradientStop Color="#7289DA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#404eed"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="{StaticResource WindowBackground}" CornerRadius="16" Padding="0" BorderBrush="#36393F" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Background="#2C2F33" Height="36" LastChildFill="False"
                       MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Lucia Bot Launcher" Foreground="#FFF" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="16,0,0,0"/>
                <Button Content="âœ•" Width="36" Height="36" Background="Transparent" Foreground="#FFF" BorderThickness="0"
                        HorizontalAlignment="Right" Click="CloseButton_Click" Cursor="Hand"/>
            </DockPanel>
            <TextBlock x:Name="StatusText" 
                       Text="Status: Stopped" 
                       FontFamily="Segoe UI" 
                       FontSize="13" 
                       FontWeight="Bold" 
                       Foreground="#FF5252" 
                       Margin="20,16,0,0"
                       Grid.Row="1"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Button x:Name="StartButton" Content="Start Bot"
                        Style="{StaticResource ModernButton}" Background="#43B581"
                        Click="StartButton_Click"/>
                <Button x:Name="StopButton" Content="Stop Bot"
                        Style="{StaticResource ModernButton}" Background="#FF5252"
                        Click="StopButton_Click" IsEnabled="False"/>
                <Button x:Name="ClearButton" Content="Clear Log"
                        Style="{StaticResource ModernButton}" Background="#7289DA"
                        Width="100" Click="ClearButton_Click"/>
            </StackPanel>
            <RichTextBox x:Name="LogArea" Grid.Row="2" Margin="20,20,20,20" IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12"
                         Background="#18191C" Foreground="#EEE" BorderThickness="0"
                         CaretBrush="#EEE"/>
        </Grid>
    </Border>
</Window> 